<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreen">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginBottom="554dp"
        android:foregroundGravity="center"
        android:src="@drawable/connect4_icon"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="157dp"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="151dp"
        android:layout_marginBottom="514dp"
        android:text="CONNECT4"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="256dp"
        android:layout_marginRight="256dp"
        android:layout_marginBottom="445dp"
        android:text="Welcome"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:layout_marginBottom="445dp"
        android:gravity="right"
        android:text="User"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:layout_width="96dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="308dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="445dp"
        android:src="@drawable/player_icon"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="123dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginBottom="367dp"
        android:text="Game Stats :"
        android:textColor="@android:color/white"
        android:textSize="27dp"
        android:textStyle="bold"></TextView>


    <GridLayout
        android:id="@+id/gl_userstats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="236dp"
        android:columnCount="2"
        android:paddingHorizontal="10dp"
        android:rowCount="3">

        <TextView
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:gravity="left"
            android:paddingHorizontal="10dp"
            android:text="Games won  "
            android:textColor="@color/user_stats"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_won"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:gravity="right"
            android:paddingHorizontal="10dp"
            android:text="."
            android:textColor="@color/user_stat_yellow"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:gravity="left"
            android:paddingHorizontal="10dp"
            android:text="Games lost  "
            android:textColor="@color/user_stats"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_lost"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:gravity="right"
            android:paddingHorizontal="10dp"
            android:text="."
            android:textColor="@color/user_stat_yellow"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:gravity="left"
            android:paddingHorizontal="10dp"
            android:text="Overall ranking  "
            android:textColor="@color/user_stats"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_rank"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:gravity="right"
            android:paddingHorizontal="10dp"
            android:text=""
            android:textColor="@color/user_stat_yellow"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

    </GridLayout>

    <TextView
        android:id="@+id/tv_topplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        android:autoLink="all"
        android:clickable="true"
        android:text="Click here to view Top 3 players"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="67dp"
        android:layout_marginEnd="256dp"
        android:layout_marginRight="256dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/button_blue"
        android:text="Play"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="218dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/button_red"
        android:text="Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


</RelativeLayout>
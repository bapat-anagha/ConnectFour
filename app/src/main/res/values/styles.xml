<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="white_circle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/white_circle</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>


    </style>

    <style name="transparent_circle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/drop_circle</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="you_circle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/you_circle</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="computer_circle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/computer_circle</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.Light.NoActionBar">    </style>

</resources>
